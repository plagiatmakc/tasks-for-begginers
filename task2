class Two
  attr_reader :r

  def initialize
    puts "Input a radius of circle"
    @r = gets.chomp.to_i
    raise ArgumentError, 'Radius must be a numeric and be more 0!' unless @r>0
    draw_circle
  end

  def draw_circle
    (0..@r*2).each do |y|
      tilt = (Math.sqrt((@r**2) - ((y - @r)**2))).round
      (0..@r*2).each do |x|
        if x == (@r - tilt) ||  x == (@r + tilt)
          print "*"
        else
          print "  "
        end
      end
      puts
    end
  end
end
