module Task
  puts "Choose task from 1 to 6"
  @task = gets.chomp.to_i
  case @task
  when 1
    load "task1"
  when 2
    load "task2"
    run = Two.new
  when 3
    load "task3"
    run = Three.new
  when 4
    load "task4"
    run = Four.new
  when 5
    load "task5"
    run = Five.new
  when 6
    load "task6"
    run = Six.new
  else  puts "Choose from 1 to 6"
  end
end